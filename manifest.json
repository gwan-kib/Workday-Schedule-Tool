{
  "manifest_version": 3,
  "name": "Workday - Schedule Tool",
  "version": "1.0",
  "description": "Extract your registered courses from the Workday View My Courses page.",

  "permissions": ["storage"],

  "host_permissions": ["https://*.myworkday.com/*"],

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
    "default_title": "Workday - Schedule Tool",
    "default_icon": {
      "128": "icon128.png"
    }
  },

  "background": {
    "service_worker": "dist/background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*.myworkday.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["dist/css/*.css", "dist/panel.html"],
      "matches": ["https://*.myworkday.com/*"]
    }
  ]
}
